{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "@girs/gjs",
      "@girs/gtk-4.0",
      "@girs/gio-2.0",
      "@girs/glib-2.0",
      "jasmine"
    ]
  },
  "include": [
    "main.ts",
    "src/**/*",
    "spec/**/*"
  ]
}
